<article class="cart-item">
	<div class="cart-item-info">
		<h2><%= item.product.title %></h2>
		<p>$<span class="cart-item-price"><%= item.totalPrice.toFixed(2) %></span> <span class="cart-product-price">($<%= item.product.price.toFixed(2) %>)</span></p>
	</div>
	<form class="cart-item-managment"
	 data-productid="<%= item.product.id %>" data-csrf="<%= locals.csrfToken %>">
	 <i class="fa-solid fa-circle-minus fa-xl icon-btn"></i>
	 <input type="text" name="quantity" value="<%= item.quantity %>" min="0" required>
	 <i class="fa-solid fa-circle-plus fa-xl icon-btn"></i>
	</form>
</article>