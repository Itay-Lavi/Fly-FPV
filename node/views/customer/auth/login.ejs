<%- include('../../shared/includes/head', {pageTitle: 'Login'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
<script src="/scripts/loading.js" defer></script>
</head>
<body>
<%- include('../../shared/includes/header') %>
	<main>
		<h1>Login</h1>
		<% if (inputData.hasError) {%>
			<section class="alert">
				<h2>Invalid Input</h2>
				<p><%= inputData.message %></p>
			</section>
			<% }%>
		<form class="main-form auth-form loading-form" action="/auth/login" method="POST">
			<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
			<p>
				<label for="email">E-mail</label>
				<input type="email" id="email" name="email" value="<%= inputData.email %>" required>
			</p>
			<p>
				<label for="password">Password</label>
				<input type="password" id="password" name="password" value="<%= inputData.password %>" required>
			</p>
			<button type="submit" class="btn">Login</button>
		   <p id="switch-form"><a href="/auth/signup">Create new user</a></p>
	       <a href="/auth/forgot">Forgot password</a>
		</form>
	</main>
<%- include('../../shared/includes/footer') %>